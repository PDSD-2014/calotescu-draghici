<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#DDDDDD"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ChAt dE B0$$y"
            android:textColor="#444444"
            android:textStyle="bold"
            android:textSize="40sp"
            android:paddingBottom="30dp"
            android:id="@+id/app_name"/>
	    		
        <TextView
            android:textColor="#444444"
            android:layout_alignLeft="@+id/user_field"
            android:textStyle="bold"
            android:id="@+id/username_label"
            android:layout_below="@id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Username"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="10dp"/>

        <EditText
            android:gravity="top"
            android:layout_centerHorizontal="true"
            android:id="@+id/user_field"
            android:layout_below="@id/username_label"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="@android:color/black"
            android:background="#AAAAAA"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:imeOptions="actionNext"/>

        <TextView
            android:textColor="#444444"
            android:textStyle="bold"
            android:layout_alignLeft="@+id/password_field"
            android:id="@+id/password_label"
            android:layout_below="@id/user_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Password"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="10dp"/>

        <EditText
            android:gravity="top"
            android:layout_centerHorizontal="true"
            android:id="@+id/password_field"
            android:layout_below="@id/password_label"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="@android:color/black"
            android:inputType="textPassword"
            android:background="#AAAAAA"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:imeOptions="actionDone"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/password_field"
                android:layout_alignLeft="@id/password_field"
                android:layout_alignRight="@id/password_field"
                >


                <Button
                android:id="@+id/sing_in_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_field"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="sign in"
                android:textSize="20sp"
                android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/register_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_field"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:text="register"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>



</RelativeLayout>
</RelativeLayout>

